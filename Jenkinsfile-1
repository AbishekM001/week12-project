pipeline {
    agent any

    tools { 
        maven 'maven3.9.11'   // must match the name in Global Tool Configuration
    }

    stages {
        stage('Checkout git') {
            steps {
                git branch: 'main', url: 'https://github.com/AbishekM001/week12-project.git'
            }
        }

        stage('Build & JUnit Test') {
            steps {
                sh 'mvn clean install'
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonarqube') {
                    sh '''
                        mvn clean verify sonar:sonar \
                          -Dsonar.projectKey=devops-project-key \
                          -Dsonar.host.url=$SONAR_HOST_URL \
                          -Dsonar.login=$SONAR_AUTH_TOKEN
                    '''
                }
            }
        }

        stage('Deploy') {
            steps {
                sh 'timeout 60s java -jar target/demo-0.0.1-SNAPSHOT.jar'
            }
        }
    }
}

        
